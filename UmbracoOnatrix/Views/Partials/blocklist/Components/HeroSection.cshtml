@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.HeroSection)Model.Content;
}

<section class="relative pt-16 md:pt-0">
	<div class="hidden md:block absolute inset-0 -z-10 h-[60svh] md:h-[50svh] lg:h-[60svh] w-full overflow-hidden">
		@if (content.HeroBgImage != null)
		{
			<img class="block h-full w-full object-cover" src="@content.HeroBgImage.Url()" />
		}
	</div>

	<div class="container mx-auto px-4 relative z-10 h-[30svh] md:h-[50svh] lg:h-[60svh] w-full flex items-center">
		<div class="w-full md:w-7/12 lg:w-5/12 flex flex-col gap-6">
			<h1 class="text-[2.5rem] sm:text-[3rem] md:text-[3rem] lg:text-rte-xxl text-primary font-bold leading-none text-center md:text-left">
				@content.HeroTitle
			</h1>
			<div class="text-body-text text-center md:text-left w-full max-w-prose">
				@Html.Raw(content.HeroText)
			</div>

			@if (content.HeroLink != null)
			{
				<a href="@content.HeroLink.Url"
				   class="bg-primary text-white py-3 px-10 no-underline text-center font-bold rounded cursor-pointer md:self-start">
					@content.HeroLink.Name
				</a>
			}
		</div>
	</div>
</section>