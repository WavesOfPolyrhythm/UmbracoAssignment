@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.TrustedSection)Model.Content;
}

<section class="py-16">
    <div class="container mx-auto px-4 relative">

        <div class="absolute z-10 text-center">
            <h1 class="text-[2.5rem] font-bold text-primary">@content.TrustedTitle</h1>
            <h1 class="text-[2.5rem] font-semibold text-secondary">@content.TrustedHighligtTitle</h1>

            <div class="mt-2 mx-auto">
                @Html.Raw(content.TrustedText)
            </div>
        </div>

        <div class="mx-auto mt-10">
            @if (content.TrustedBackgroundImage != null)
            {
                <img class="h-full w-full object-cover" src="@content.TrustedBackgroundImage.Url()" />
            }
        </div>

        <div class="mx-auto hidden md:block">
            @if (content.TrustedSecondaryBackgroundImage != null)
            {
                <img class="h-full w-full object-cover" src="@content.TrustedSecondaryBackgroundImage.Url()" />
            }
        </div>
    </div>
</section>
