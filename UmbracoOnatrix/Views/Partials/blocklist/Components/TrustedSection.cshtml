@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.TrustedSection)Model.Content;
}

<section class="py-16">
    <div class="container mx-auto px-4">

        <div class="text-center flex flex-col gap-4 items-center p-4">
      <h1 class="text-[2.5rem] font-bold text-primary">@content.TrustedTitle</h1>
      <h1 class="text-[2.5rem] font-semibold text-secondary">@content.TrustedHighligtTitle</h1>

       <div class="hidden md:block">
        @Html.Raw(content.TrustedText)
      </div>

      @if (content.TrustedLink != null)
      {
        <a href="@content.TrustedLink.Url"
           class="bg-primary text-white py-3 px-10 no-underline text-center font-bold rounded cursor-pointer">
          @content.TrustedLink.Name
        </a>
      }
    </div>
  </div>
</section>

